{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Mcp": {    
    "Transport": "Stdio",
    "Http": {
      "Endpoint": "https://remote-mcp-server-authless.idosalomon.workers.dev/mcp"
    },
    "Sse": {
      "Endpoint": "https://remote-mcp-server-authless.idosalomon.workers.dev/sse"
    },
    "Stdio": {
      "ExePath": "D:\\Tester\\ai_mcp_ui\\TestMcpServer\\bin\\Debug\\net8.0\\TestMcpServer.exe",
      "Args": ""
    }
  },
  "PayloadValidation": {
    "MaxPayloadSize": 10485760,
    "AllowedMimeTypes": [
      "text/html",
      "text/plain",
      "text/uri-list",
      "application/json",
      "image/png",
      "image/jpeg",
      "image/gif",
      "application/vnd.mcp.remotedom"
    ],
    "RejectOversizedPayloads": true,
    "RejectUnsupportedMimeTypes": true
  }
}
