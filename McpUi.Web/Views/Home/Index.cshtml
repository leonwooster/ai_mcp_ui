@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">MCP UI Client</h1>
    <p>A client for Model Context Protocol (MCP) servers with UI resource rendering capabilities.</p>
    
    <div class="mt-5">
        <h2>UI Resource Renderer</h2>
        <p>Render MCP UI resources in-page with proper sandboxing and security.</p>
        
        <form asp-controller="Home" asp-action="UIResource" method="get" class="mt-3">
            <div class="form-group">
                <label for="resourceId">Resource ID:</label>
                <input type="text" class="form-control" id="resourceId" name="resourceId" placeholder="Enter resource ID" style="max-width: 300px; margin: 0 auto;">
            </div>
            <div class="form-group mt-2">
                <label for="sessionId">Session ID (optional):</label>
                <input type="text" class="form-control" id="sessionId" name="sessionId" placeholder="Enter session ID" style="max-width: 300px; margin: 0 auto;">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Render UI Resource</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/ui-actions.js"></script>
}

